<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmshareAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmshareAdmin.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <p class="nav navbar-text">Hello, @User.Identity?.Name!</p>
                </div>
            </div>
        </nav>
    </header>
    <div class="body-content">
        <div class="row">
            <div id="mainMenu" class="col-md-2 border">
                <p>MENU</p>
                <ul>
                    <li><a asp-page="/FarmAllocation/Manage">Farm Allocations</a> </li>
                    <li><a asp-page="/SeniorLivingFacilities/Index">Senior Living Facilities</a> </li>
                </ul>

                <input id="skipNavigation" type="text" size="1" style="visibility:hidden" />
            </div>
            <div class="col-md-10">
                <main role="main" class="pb-3">
                    <div id="RenderBody">
                        &nbsp;&nbsp;
                        @RenderBody()
                        &nbsp;&nbsp;
                    </div>
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/vue.global.js" asp-append-version="true"></script>
    <script src="~/js/farmAllocations.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>